<div align="center">
  <nav>
    <ul class="pagination">
      <li{{^has_prev}} class="disabled"{{/has_prev}}>
        <a href="#" class="paginationitem" aria-label="Previous" data-page="{{prev}}">
          <span aria-hidden="true">&laquo;</span>
        </a>
      </li>
      {{#iter_pages}}
        {{#page}}
          <li{{#active}} class="active"{{/active}}><a href="#" data-page={{page}}>{{page}}</a></li>
        {{/page}}
        {{^page}}
          <li class="disabled"><a href="#">...</a></li>
        {{/page}}
      {{/iter_pages}}
      <li{{^has_next}} class="disabled"{{/has_next}}>
        <a href="#" aria-label="Next" data-page="{{next}}">
          <span aria-hidden="true">&raquo;</span>
        </a>
      </li>
    </ul>
  </nav>
</div>
